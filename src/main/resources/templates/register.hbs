{{#partial "title"}}
    Login
{{/partial}}
{{#partial "content"}}

    <div class="d-flex justify-content-center align-items-center h-100 w-100">
        <div class="card w-30">
            <div class="d-flex w-100 justify-content-center">
                <img src="/assets/logo.png" class="w-50" alt="...">
            </div>
            <article class="card-body">
                <a href="/login" class="float-right btn btn-outline-dark">Sign in</a>
                <h4 class="card-title mb-4 mt-1">Create Account</h4>
                <form action="/register" method="post">
                    <div class="form-group">
                        <label>Your Full Name</label>
                        <input name="fullname" class="form-control" placeholder="John Doe" type="text" required>
                    </div>
                    <div class="form-group">
                        <label>Your Username</label>
                        <input name="username" class="form-control" placeholder="doe" type="text" required>
                    </div>
                    <div class="form-group">
                        <label>Your Company</label>
                        <input name="company" class="form-control" placeholder="Ranger Danger" type="text" required>
                    </div>
                    <div class="form-group">
                        <label>Your Password</label>
                        <input name="password" class="form-control" placeholder="*****" type="password" required>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-dark btn-block"> Register</button>
                    </div>
                </form>
            </article>
        </div>
    </div>

{{/partial}}

{{> layout.hbs}}